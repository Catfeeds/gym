/* list-item */

page {
  background: #f8f8f8;
}

.container{
  margin-bottom: 30rpx;
}

.list-item {
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  border-radius: 5px;
  margin: 30rpx 2% 0 2%;
  display: flex;
  flex-direction: column;
  background: #fff;
  box-sizing: border-box;
  width: 96%;
  font-size: 26rpx;
  color: #333;
  line-height: 70rpx;
  padding: 10rpx 10rpx 0 10rpx;
  align-items: center;
}

.list-item-line {
  display: flex;
  flex-direction: row;
  width: 90%;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  text-align: center;
}

.list-item-line:last-child{
  border-bottom: none;
}

.list-item-left {
  width: 30%;
}

.list-item-right {
  width: 70%;
}

.location-text{
  color: #3cc51f;
}