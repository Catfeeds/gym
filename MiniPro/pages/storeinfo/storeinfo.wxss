
page {
  background: #fff;
}

.container {
  font-size: 16px;
  align-items: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.pro-name {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  justify-content: space-around;
  align-items: center;
}

.pro-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.title {
  line-height: 150rpx;
  font-size: 32rpx;
  color: #999;
}

.explain {
  font-size: 28rpx;
  color: #333;
  width: 90%;
  line-height: 60rpx;
  text-indent: 1rem;
}

/* bottom-btn */
.bottom-btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
}