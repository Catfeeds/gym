page {
  background: #f8f8f8;
}

/* 打卡数据 */

.data-section {
  height: 300rpx;
  width: 90%;
  margin: 60rpx 60rpx 0;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 10px;
}

.data-section-left, .data-section-right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  color: #7e68a9;
}

.data-section-number {
  font-size: 100rpx;
}

.data-section-text {
  font-size: 30rpx;
}

/* clock */

.clock-section {
  width: 380rpx;
  height: 380rpx;
  margin-top: 50rpx;
  background-size: 380rpx 380rpx;
  /* background-position: 0 12rpx; */
}

.clock-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 380rpx;
  width: 380rpx;
}

.clock-area-text {
  color: #fefeff;
  font-size: 36rpx;
  font-weight: 500;
  margin-top: -15rpx;
}

.clock-area-time {
  color: #e8dff4;
  font-size: 32rpx;
  margin-top: 24rpx;
}

.clock-change-section {
  font-size: 28rpx;
  color: #7e68a9;
  line-height: 60rpx;
  text-decoration: underline;
  display: flex;
  flex-direction: column;
}

/* list-item */

.list-section{
  width: 90%;
  margin: 0 5%;
  background: #fff;
  border-radius: 5px;
}

.list-container {
  justify-content: center;
  height: 100%;
  margin-top: 50rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 0 5%;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #353535;
  align-items: center;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.list-item:last-child{
  border-bottom: none;
}

.img-container {
  width: 20%;
  justify-content: flex-end;
  padding-right: 30rpx;
}

.text-container {
  width: 80%;
  text-align: left;
  padding-left: 30rpx;
}

.text-container text{
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.list-item image {
  height: 50rpx;
  width: 50rpx;
}

.choose-btn {
  position: fixed;
  bottom: 80rpx;
}

.choose-btn, .choose-btn button {
  height: 80rpx;
  width: 80%;
}

.choose-btn button {
  width: 70%;
  border-radius: 20px;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: #7e68a9;
}
