
page{
  background: #f8f8f8;
}

/* user-info */

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: safe center;
  height: 300rpx;
  width: 100%;
  background-color: #cab9d7;
}

.user-info image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.user-info text {
  line-height: 60rpx;
  font-size: 30rpx;
  color: #353535;
  margin-top: 15rpx;
  font-weight: 500;
}

/* func-list */

.func-list {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-top: -30rpx;
}

.border-radius-top{
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.border-radius-bottom{
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.func-list-item {
  line-height: 90rpx;
  font-size: 26rpx;
  color: #353535;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.3);
  align-items: center;
  background: #fff;
}

.func-list-item image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 15rpx;
}

.item-desc{
  margin-left: 15rpx;
}

.no-border{
  border: none;
}

.func-list-second{
  margin-top: 30rpx;
}