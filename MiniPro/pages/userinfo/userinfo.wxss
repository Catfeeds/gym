/* info-cell */

.info-cell-title, .info-cell-item {
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #d9d9d9;
  width: 100%;
  font-size: 28rpx;
}

.info-cell-title {
  padding-left: 30rpx;
}

.info-cell-item {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
}

.info-cell-left, .info-cell-right {
  width: 25%;
}

.info-cell-right{
  text-align: center;
  border-left: 1rpx solid rgba(220, 220, 220, 0.6);
}

.info-cell-middle {
  width: 50%;
}
